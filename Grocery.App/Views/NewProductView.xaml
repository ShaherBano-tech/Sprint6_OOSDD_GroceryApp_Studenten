<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.NewProductView"
             Title="Nieuw product">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Naam" />
        <Entry Placeholder="Bijv. Pasta" Text="{Binding Name}" />
        <Label Text="Voorraad (aantal)" />
        <Entry Placeholder="Bijv. 50" Keyboard="Numeric" Text="{Binding Stock}" />
        <Label Text="Houdbaar tot" />
        <DatePicker Date="{Binding ShelfLifeDate}" />
        <Label Text="Prijs" />
        
        <Grid ColumnDefinitions="Auto,*">
            <Label Text="â‚¬" VerticalOptions="Center" Margin="0,0,6,0"/>
            <Entry Grid.Column="1" Placeholder="Bijv. 1,49"
                   Keyboard="Numeric"
                   Text="{Binding Price}" />
        </Grid>
        <Button Text="Opslaan" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>
